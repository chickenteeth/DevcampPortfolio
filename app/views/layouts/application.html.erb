<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Lato&family=Roboto+Slab&display=swap" rel="stylesheet"> 

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column text-center">
      <%= video_tag(
              'blurred-code.ogv',
              type: 'video/ogv',
              playsinline: true,
              id: 'background',
              autoplay: true,
              loop: true,
              muted: true,
              poster: 'home_bg.png'
            )
      %>

      <%= render 'shared/application_nav' %> 
      <%= render '/shared/alerts' %>

      <%= yield %>
      
      <%= render 'shared/application_footer' %>

      <%= source_helper("application") %>
    </div>
  </body>
</html>