<div class="col-md-4 mt-5" data-id="<%= portfolio_item.id %>">
    <div class="card mb-4 shadow-sm">
        <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb').to_s, width: '100%', class: 'thumb-img' %>
        <p class="card-text">
            <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
        </p>
    </div>
</div>